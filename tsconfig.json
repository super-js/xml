{
  "compilerOptions"       : {
    "lib"                      : ["es2020"],
    "target"                   : "es2020",
    "module"                   : "commonjs",
    "moduleResolution"         : "node",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata"    : true,
    "experimentalDecorators"   : true,
    "sourceMap"                : true,
    "esModuleInterop"          : true,
    "outDir"                   : "./lib",
    "declaration"              : true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}